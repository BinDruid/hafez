{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "types/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "ignoreDeprecations": "5.0",
    "types": ["vite/client", "@vitejs/plugin-vue"],
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
